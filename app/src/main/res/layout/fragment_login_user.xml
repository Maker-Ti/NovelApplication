<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainLayoutBC"
    android:orientation="vertical"
    android:layout_height="match_parent">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:background="@color/whiteBC"
               android:layout_width="match_parent"
               android:layout_height="170dp">
               <LinearLayout
                   android:layout_marginTop="30dp"
                   android:layout_width="match_parent"
                   android:layout_height="120dp"
                   android:orientation="horizontal">
                   <androidx.cardview.widget.CardView
                       android:layout_width="100dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                       android:layout_height="100dp"
                       app:cardCornerRadius="50dp"
                       android:id="@+id/card_login"
                       android:background="#fff">
                       <ImageView
                           android:scaleType="centerCrop"
                           android:id="@+id/img_head"

                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:src="@mipmap/person"
                           />
                   </androidx.cardview.widget.CardView>
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:layout_marginLeft="20dp">
                       <TextView
                           android:layout_marginTop="20dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/mainTxtColor"
                           android:textSize="24dp"
                           android:id="@+id/tv_username"
                           android:text="LoginUser"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           android:id="@+id/tv_userid"
                           android:text="id:123"/>
                   </LinearLayout>
               </LinearLayout>

           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/re_userinfo"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               android:layout_marginTop="10dp">
               <EditText
                   android:id="@+id/ed_name"
                   android:layout_marginRight="10dp"
                   android:gravity="right|center"
                   android:background="@drawable/bc_none"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/mainTxtColor"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:text="个人信息"
                   android:textSize="18dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:text="昵称"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/grey"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               >
               <EditText
                   android:id="@+id/ed_pwd"
                   android:layout_marginRight="10dp"
                   android:gravity="right|center"
                   android:background="@drawable/bc_none"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/mainTxtColor"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:text="密码"
                   android:textSize="18dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="密码"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/grey"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               >
               <EditText
                   android:id="@+id/ed_age"
                   android:layout_marginRight="10dp"
                   android:gravity="right|center"
                   android:background="@drawable/bc_none"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/mainTxtColor"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:text="密码"
                   android:textSize="18dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="年龄"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/grey"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               >
               <EditText
                   android:id="@+id/ed_mail"
                   android:layout_marginRight="10dp"
                   android:gravity="right|center"
                   android:background="@drawable/bc_none"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textColor="@color/mainTxtColor"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   android:text="密码"
                   android:textSize="18dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="e-mail"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/grey"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               >

               <RadioGroup
                   android:id="@+id/rg"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentRight="true"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <RadioButton
                       android:id="@+id/male"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:checked="true"
                       android:text="男" />

                   <RadioButton
                       android:id="@+id/femle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="50dp"

                       android:text="女" />
               </RadioGroup>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="性别"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/grey"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"/>
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/re_change"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               android:layout_marginTop="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/blackText"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:text="确认修改"
                   android:textSize="18dp"/>

           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/re_exit"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@color/whiteBC"
               android:orientation="vertical"
               android:layout_marginTop="10dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/txtRedColor"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:text="退出登录"
                   android:textSize="18dp"/>

           </RelativeLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>
